<UserControl x:Class="EQATEC.Tracer.UserControls.VersionNotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="20" Width="303">
    <Grid Background="PaleGoldenrod" Cursor="Hand" MouseUp="Grid_MouseUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Name="image1" Stretch="Fill" Height="20" Width="20" VerticalAlignment="Center" Source="/EQATECTracerMain;component/Resources/download_small.png" />
        <TextBlock Grid.Column="1" Name="m_txtMessage" Text="A newer version is available" VerticalAlignment="Center" />
    </Grid>
</UserControl>
